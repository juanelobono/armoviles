<%= form_for(@event) do |f| %>
  <% if @event.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@event.errors.count, "error - ") %>No se puede guardar este evento:</h2>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :descripcion %><br>
    <%= f.text_area :descripcion, rows: 3, cols: 30 %>
  </div>
  <div class="field">
    <%= f.label :fecha_inicio %><br>
    <%= f.text_field :fecha_inicio, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :fecha_fin %><br>
    <%= f.text_field :fecha_fin, size: 30 %>
  </div>
  <div class="field">
    <%= f.label :lugar %><br>
    <%= f.text_field :lugar, size: 30 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
